<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminMenuActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/img_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo"/>

    <Button
        android:id="@+id/button_add_bus"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="#2FE308"
        android:text="@string/add_bus"/>

    <Button
        android:id="@+id/button_remove_bus"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#2FE308"
        android:text="@string/remove_bus"/>

    <Button
        android:id="@+id/button_remove_user"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#2FE308"
        android:text="@string/remove_user"/>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#2FE308"
        android:text="@string/logout"/>


</LinearLayout>