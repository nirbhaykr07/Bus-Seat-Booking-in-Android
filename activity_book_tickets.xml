<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookTicketsActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/img_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo"/>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:drawableLeft="@drawable/bus"
            android:layout_marginLeft="10dip"
            android:background="#13EABD"
            android:paddingLeft="2dp"
            android:padding="10dip"
            android:hint="@string/enter_source"/>

        <Spinner
            android:id="@+id/spinnerSource"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dip"
            android:layout_marginLeft="10dip"
            android:background="#13EABD"
            android:paddingLeft="2dp"
            android:padding="10dip"
            android:prompt="@string/enter_source" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/bus"
            android:layout_marginLeft="10dip"
            android:background="#13EABD"
            android:paddingLeft="2dp"
            android:padding="10dip"
            android:hint="Enter Destination"/>

        <Spinner
            android:id="@+id/spinnerDest"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="10dip"
            android:background="#13EABD"
            android:paddingLeft="2dp"
            android:padding="10dip"
            android:prompt="@string/enter_source" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/date"
            android:layout_marginLeft="10dip"
            android:background="#13EABD"
            android:paddingLeft="2dp"
            android:padding="10dip"
            android:hint="Enter Date"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="10dip"
            android:paddingLeft="2dp"
            android:hint="Date of Travel"
            android:padding="10dip"
            android:background="#13EABD"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/button_search"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="#2FE308"
            android:text="@string/search"/>

        <Button
            android:id="@+id/button_Cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dip"
            android:background="#2FE308"
            android:text="Cancel"/>

    </LinearLayout>

</LinearLayout>